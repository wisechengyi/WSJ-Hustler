{
    "manifest_version": 2,

    "name": "WikiMask",
    "description": "show only plain text wikipedia so other people won't know you are looking at it!",
    "version": "1.2",

    "browser_action": {
        "default_icon": "ws.png",
        "default_popup": "popup.html",
        "default_title": "Plain text wikipedia"
    },

    "content_scripts": [
        {
            "matches": ["http://*.wsj.com/*","https://*.wsj.com/*"],
            "js": ["jquery.min.js", "twitch.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "https://ajax.googleapis.com/",
        "storage"
    ]
}
